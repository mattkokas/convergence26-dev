{% set mastheadClass = 'masthead masthead--sticky' %}

{% if hasHero %}
   {% set mastheadClass = 'masthead masthead--sticky masthead--absolute' %}
{% endif %}

<header class="{{ mastheadClass }}" role="banner">
   <div class="masthead__nav">
      <div class="masthead__nav__top">
         <a href="/" class="masthead__logo">
            <img src="/images/logo-300x300.png" alt="Convergence 26 - Louisville, KY">
         </a>

         <a id="nav-toggle-open" class="masthead__hamburger" title="Menu" aria-label="Open Navigation Menu" href="#navigation">
            <img inline src="/images/icons/bars.svg" class="icon" />
         </a>

         <a id="nav-toggle-close" class="masthead__close" title="Close Menu" aria-label="Close Navigation Menu">
            <img inline src="/images/icons/times.svg" class="icon" />
         </a>
      </div>

      <nav id="navigation" class="mast-nav">
         <ul class="nav-menu">
            <li class="nav-menu__item">
               <a class="nav-menu__link" href="/">Home</a>
            </li>
            <li class="nav-menu__item">
               <a class="nav-menu__link" href="/hotel">Hotel</a>
            </li>
            <li class="nav-menu__item">
               <a class="nav-menu__link" href="/venue">Venue</a>
            </li>
            <li class="nav-menu__item">
               <a class="nav-menu__link" href="/louisville">Louisville</a>
            </li>
            <li class="nav-menu__item">
               <a class="nav-menu__link" href="/committee">Committee</a>
            </li>
            <li class="nav-menu__item">
               <a class="nav-menu__link" href="/contact">Contact</a>
            </li>
         </ul>
      </nav>

      <nav class="mast-social-nav">
         <ul class="social-nav">
            <li class="social-nav__item">
               <a href="{{ social.facebook }}" target="_blank" class="social-nav__link" title="Convergence 26 @ Facebook" aria-label="Convergence 26 @ Facebook">
                  <img inline src="/images/icons/facebook-square.svg" class="icon" />
               </a>
            </li>
            <li>
               <a href="{{ social.instagram }}" target="_blank" class="social-nav__link" title="Convergence 26 @ Instagram" aria-label="Convergence 26 @ Instagram">
                  <img inline src="/images/icons/instagram.svg" class="icon" />
               </a>
            </li>
         </ul>
      </nav>
   </div>
</header>
